<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- school_management/school_library list view #T00341-->
    <record id="school_management_school_library_list_view" model="ir.ui.view">
        <field name="name">school_management_school_library_list_view</field>
        <field name="model">school.library</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code" />
                <field name="name" />
                <field name="book_author" />
                <field name="book_price" />
            </tree>
        </field>
    </record>

    <!-- school_management/school_library form view #T00341-->
    <record id="school_management_school_library_form_view" model="ir.ui.view">
        <field name="name">school_management_school_library_form_view</field>
        <field name="model">school.library</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="code" />
                            <field name="name" />
                            <field name="book_author" />
                        </group>
                        <group>
                            <field name="book_price" />
                            <field name="allocated_person" />
                            <field name="book_issue_date" />
                            <field name="book_return_date" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="message_ids" widget="mail_thread" />
                    <field name="activity_ids" widget="mail_activity" />
                </div>
            </form>
        </field>
    </record>

    <!-- school management school library search view #T00341-->
    <record id="school_management_school_library_search_view" model="ir.ui.view">
        <field name="name">school_management_school_library_search_view</field>
        <field name="model">school.library</field>
        <field name="arch" type="xml">
            <search>
                <field name="code" />
                <field name="name" />
                <field name="book_author" />
                <field name="book_price" />
                <field name="allocated_person" />
                <field name="book_issue_date" />
                <field name="book_return_date" />
            </search>
        </field>
    </record>

    <!-- action for school library #T00341 -->
    <record id="action_school_library" model="ir.actions.act_window">
        <field name="name">Book List</field>
        <field name="res_model">school.library</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
