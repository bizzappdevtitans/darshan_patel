<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!--school management school teacher list view #T00341-->
    <record id="school_management_school_teacher_list_view" model="ir.ui.view">
        <field name="name">school_management_school_teacher_list_view</field>
        <field name="model">school.teacher</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" decoration-bf="1" decoration-primary="1" />
                <field name="subject" decoration-primary="1" />
                <field name="student_ids" decoration-primary="1" />
                <field name="school_name" decoration-primary="1" />
                <field name="rate" widget="priority" decoration-primary="1" />
                <field name="currency_id" invisible="0" decoration-primary="1" />
                <field name="fee" widget="monetary" decoration-primary="1" />
            </tree>
        </field>
    </record>

    <!--school management school teacher form view #T00341-->
    <record id="school_management_school_teacher_form_view" model="ir.ui.view">
        <field name="name">school_management_school_teacher_form_view</field>
        <field name="model">school.teacher</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="subject" />
                            <field name="student_ids" widget="many2many_checkboxes" />
                            <field name="teacher_ids" widget="many2many_binary" />
                        </group>
                        <group>
                            <field name="teacher_phone" widget="phone" />
                            <field name="teacher_mail" widget="email" />
                            <field name="school_name" />
                            <field name="rate" />
                            <field name="currency_id" invisible="0" />
                            <field name="fee" widget="monetary" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- school management school sports search view #T00341-->
    <record id="school_management_school_sports_search_view" model="ir.ui.view">
        <field name="name">school_management_school_sports_search_view</field>
        <field name="model">school.teacher</field>
        <field name="arch" type="xml">
            <search>
                <field name="subject" />
                <field name="name" />
                <field
                    name="student_ids"
                    select="multi"
                    domain="[('state','=', 'study')]"
                />
                <field name="teacher_phone" />
                <field name="teacher_mail" />
                <field name="school_name" />
                <field name="fee" />
            </search>
        </field>
    </record>

    <!-- school teacher record action #T00341-->
    <record id="action_school_teacher" model="ir.actions.act_window">
        <field name="name">Teacher List</field>
        <field name="res_model">school.teacher</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
