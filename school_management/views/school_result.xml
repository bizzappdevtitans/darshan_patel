<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- school management school result list view #T00341-->
    <record id="school_management_school_result_list_view" model="ir.ui.view">
        <field name="name">school_management_school_result_list_view</field>
        <field name="model">school.result</field>
        <field name="arch" type="xml">
            <tree decoration-danger="marks &lt;= 40" decoration-success="marks &gt; 41">
                <field name="name" />
                <field name="enroll_number" />
                <field name="standard" />
                <field name="marks" />
                <field name="university" />
            </tree>
        </field>
    </record>

    <!--school management school result form view #T00341-->
    <record id="school_management_school_result_form_view" model="ir.ui.view">
        <field name="name">school_management_school_result_form_view</field>
        <field name="model">school.result</field>
        <field name="arch" type="xml">
            <form>
                <!-- <header>
                    <button name="get_all_record_name" class="oe_highlight" string="GEt Record" type="object"/>
                </header> -->
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="enroll_number" />
                            <field name="standard" />
                            <field name="chemistry" />
                            <field name="physics" />
                            <field name="maths" />
                            <field name="marks" />
                            <field name="recheck_record" />
                        </group>
                        <group>
                            <field name="university" />
                            <field name="date_start" />
                            <field name="image" widget="image" />
                        </group>
                    </group>
                </sheet>
                <!--  chatter box #T00341 -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="message_ids" widget="mail_thread" />
                    <field name="activity_ids" widget="mail_activity" />
                </div>
            </form>
        </field>
    </record>

    <!--school management school result graph view #T00341-->
    <record id="school_management_school_result_graph_view" model="ir.ui.view">
        <field name="name">school_management_school_result_graph_view</field>
        <field name="model">school.result</field>
        <field name="type">graph</field>
        <field name="arch" type="xml">
            <graph string="Result" type="bar">
                <field name="name" />
                <field name="standard" />
                <field name="marks" />
                <field name="university" />
            </graph>
        </field>
    </record>

    <!--school management school result kanban view #T00341-->
    <record id="school_management_school_result_kanban_view" model="ir.ui.view">
        <field name="name">school_management_school_result_kanban_view</field>
        <field name="model">school.result</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban class="o_res_partner_kanban">
                <field name="name" />
                <field name="standard" />
                <field name="marks" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name" />
                                </strong>
                                <div>
                                    <field
                                        name="image"
                                        widget="image"
                                        class="oe_avatar"
                                    />
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!--school management school result calendar view #T00341-->
    <record id="school_management_school_result_calendar_view" model="ir.ui.view">
        <field name="name">school_management_school_result_calendar_view</field>
        <field name="model">school.result</field>
        <field name="type">calendar</field>
        <field name="arch" type="xml">
            <calendar string="Tasks" date_start="date_start" mode="month">
                <field name="name" />
            </calendar>
        </field>
    </record>

    <!--school management school result pivot view #T00341-->
    <record id="school_management_school_result_pivot_view" model="ir.ui.view">
        <field name="name">school_management_school_result_pivot_view</field>
        <field name="model">school.result</field>
        <field name="arch" type="xml">
           <pivot string="Student Analysis">
               <field name="name" type="row" />
           </pivot>
        </field>
    </record>

    <!--school management school result activity view #T00341-->
    <record id="school_management_school_result_activity_view" model="ir.ui.view">
        <field name="name">school_management_school_result_activity_view</field>
        <field name="model">school.result</field>
        <field name="type">activity</field>
        <field name="arch" type="xml">
           <activity string="Students">
               <templates>
                   <div t-name="activity-box">
                       <div>
                           <field name="name" />
                       </div>
                   </div>
               </templates>
           </activity>
        </field>
    </record>

    <!--school management school result search view #T00341-->
    <record id="school_management_school_result_search_view" model="ir.ui.view">
        <field name="name">school_management_school_result_search_view</field>
        <field name="model">school.result</field>
        <field name="arch" type="xml">
            <search>
                <field name="enroll_number" />
                <field name="name" />
                <field name="standard" />
                <field name="marks" string="Total Marks Greater Than =" />
                <field name="date_start" />
                <field name="university" />
            </search>
        </field>
    </record>

    <!--school management school result action #T00341-->
    <record id="action_school_result" model="ir.actions.act_window">
        <field name="name">Student Result</field>
        <field name="res_model">school.result</field>
        <field name="view_mode">tree,form,graph,kanban,calendar,pivot,activity</field>
    </record>
</odoo>
