<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- school sports list view #T00341-->
    <record id="school_management_school_sports_list_view" model="ir.ui.view">
        <field name="name">school_management_school_sports_list_view</field>
        <field name="model">school.sports</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" decoration-info="1" />
                <field name="game" decoration-info="1" />
                <field name="date_of_birth" />
                <field name="player_status" decoration-info="1" />
                <field name="favorites" widget="boolean_favorite" decoration-info="1" />
            </tree>
        </field>
    </record>

    <!-- school sports form view #T00341-->
    <record id="school_management_school_sports_form_view" model="ir.ui.view">
        <field name="name">school_management_school_sports_form_view</field>
        <field name="model">school.sports</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="game" />
                            <field name="game_type" />
                            <field name="date_of_birth" />
                            <field name="player_status" widget="boolean_toggle" />
                        </group>
                        <group>
                            <field name="favorites" widget="boolean_favorite" />
                            <field name="mobile_number" widget="phone" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- school management school sports search view #T00341-->
    <record id="school_management_school_sport_search_view" model="ir.ui.view">
        <field name="name">school_management_school_sports_search_view</field>
        <field name="model">school.sports</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="game" />
                <field name="game_type" />
                <field name="date_of_birth" />
                <field name="player_status" />
                <field name="mobile_number" />
            </search>
        </field>
    </record>

    <!-- school sports action #T00341-->
    <record id="action_school_sports" model="ir.actions.act_window">
        <field name="name">Player List</field>
        <field name="res_model">school.sports</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
