<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- school management select player list view #T00365-->
    <record id="school_management_select_player_list_view" model="ir.ui.view">
        <field name="name">school_management_select_player_list_view</field>
        <field name="model">select.player</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="game" />
            </tree>
        </field>
    </record>

    <!--school management select player form view #T00365-->
    <record id="school_management_select_player_form_view" model="ir.ui.view">
        <field name="name">school_management_select_player_form_view</field>
        <field name="model">select.player</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="game" />
                        </group>
                    </group>
                    <footer>
                        <button
                            name="action_select_player"
                            string="Select"
                            class="btn-primary"
                            type="object"
                            data-hotkey="v"
                        />
                        <button
                            string="Discard"
                            class="btn-secondary"
                            special="cancel"
                            data-hotkey="z"
                        />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- action for select player #T00365-->
    <record id="action_select_player_view" model="ir.actions.act_window">
        <field name="name">Select Player</field>
        <field name="res_model">select.player</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
