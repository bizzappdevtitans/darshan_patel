<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- sale order form view #T7041 -->
    <record id="add_new_field_at_product_sale_order_form_view" model="ir.ui.view">
        <field name="name">add.new.field.at.product.sale.order.form.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <!-- added field for sale order #T7041 -->
            <xpath
                expr="//field[@name='order_line']//tree//field[@name='product_id']"
                position="after"
            >
                <field name="short_description" />
            </xpath>
        </field>
    </record>
</odoo>
