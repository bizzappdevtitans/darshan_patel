<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- product template form view #T7041 -->
    <record id="add_new_field_at_product_product_template_form_view" model="ir.ui.view">
        <field name="name">add.new.field.at.product.product.template.form.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <data>
                <!-- added field for product template #T7041 -->
                <xpath expr="//field[@name='company_id']" position="before">
                    <field name="short_description" />
                </xpath>
            </data>
        </field>
    </record>
</odoo>
